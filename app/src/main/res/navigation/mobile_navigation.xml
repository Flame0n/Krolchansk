<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.krolchansk.ui.home.HomeFragment"
        android:label="Главная страница"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_assortment"
        android:name="com.example.krolchansk.ui.assortment.AssortmentFragment"
        android:label="Ассортимент"
        tools:layout="@layout/fragment_assortment" />

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.krolchansk.ui.cart.CartFragment"
        android:label="Корзина"
        tools:layout="@layout/fragment_cart" />

    <fragment
        android:id="@+id/navigation_call"
        android:name="com.example.krolchansk.ui.call.CallFragment"
        android:label="Обратная связь"
        tools:layout="@layout/fragment_call" />
</navigation>